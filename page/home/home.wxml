<!-- 1 小程序的数据绑定 -->
<view>Hello {{name}}</view>
<view>我的年龄：{{age}}</view>

<!-- 2 列表展示 wx:for-->
<view wx:for="{{movice}}">{{item.name}}--{{item.age}}</view>

<!-- 3 事件监听 -->
<view>当前计数：{{counter}}</view>
<button size="mini" bindtap="handleBtnClick">+</button>
<button size="mini" bindtap="delBtnClick">-</button>
