<!--page/home/home.wxml-->
<text class="title">Hello Word</text>
<button size="mini">按钮</button>

<!-- 1 navigator页面跳转 -->
<navigator url="/page/detail/detail">跳到详情页</navigator>

<!-- 2navigator属性： open-type  -->
<navigator url="/page/detail/detail"
           open-type="redirect">
      跳到详情页(redirect)
</navigator>
<navigator url="/page/about/about"
           open-type="switchTab">
      跳到关于页(switchTab)
</navigator>
<navigator url="/page/detail/detail"
           open-type="reLaunch">
      跳到详情页(reLaunch)
</navigator>

<!-- 3 跳转过程中数据的传递 -->
<navigator url="/page/detail/detail?name=why&age=18&height=1.88">跳到详情页</navigator>
<view>{{title}}</view>

<!-- 4 通过代码进行页面跳转 -->
<button size="mini" bind:tap="handlePushDetail">跳到详情页</button>